<fieldset class='info'>
  <legend class='info-title'>
    <h2>info</h2>
  </legend>
  <dl class="users-info">

    <dt>Name:</dt>
    <dd><%= current_user.first_name %> <%= current_user.last_name %></dd>

    <dt>Email:</dt>
    <dd><%= current_user.email %></dd>

    <dt>OAuths:</dt>

    <dd>
      <% if current_user.providers.include?('google_oauth2') %>
        <%= image_tag 'google.png', class: 'google-logo' %>
      <% end %>
      <% if current_user.providers.include?('twitter') %>
        <%= image_tag 'twitter.png', class: 'twitter-logo' %>
      <% end %>
    </dd>

  </dl>
</fieldset>
