<script>
  function initMap() {
    var center = {lat: 0.000, lng: 0.000};
    var uluru = {lat: -25.344, lng: 131.036};
    var denver = {lat: 39.739, lng: -104.990};
    var disasters = [uluru, denver];
    var map = new google.maps.Map(document.getElementById("map"), {
      zoom: 1,
      center: center
    });
    for (i=0;i<disasters.length;i++) {
      var marker = new google.maps.Marker({
        position: disasters[i],
        map: map
      });
      attachMarkerInfo(marker, disasters[i])
    };
  };
  function attachMarkerInfo(marker, disaster) {
    var infowindow = new google.maps.InfoWindow({
      content: disaster
    });
    marker.addListener('click', function() {
      infowindow.open(marker.get('map'), marker);
    });
  }
</script>
