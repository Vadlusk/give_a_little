<header class="disaster-header">
  <h1 class="type country"><%= @disaster.type %> in <%= @disaster.country %></h1>
  <h2 class="date"><%= @disaster.format_date %>
    <div class="buttons">
      <%= link_to 'Donate Now', charities_path(type: @disaster.type), class: "donate-now btn btn-primary" %>
    </div>
  </h2>
</header>

<main class="disaster-main">

  <div id="small_map" data-lat="<%= @disaster.latitude %>" data-lng="<%= @disaster.longitude %>"></div>

  <%= javascript_include_tag 'disasters/show' %>
  <% unless @disaster.description.nil? %>
    <section class="description">
      <%= @disaster.description.html_safe %>
    </section>
  <% end %>
</main>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['google_api_key'] %>&callback=initMap">
</script>
